<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mh4Quanlysach">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý sách"
        android:textColor="@color/blueDark"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Tiêu đề"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtTieuDe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập tại đây"
                android:inputType="text"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Tác giả"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtTacGia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập tại đây"
                android:inputType="text"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Thể Loại"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập tại đây"
                android:inputType="text"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Năm xuất bản"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtNamXuatBan"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2024"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/btnNamXB"
                android:layout_width="22dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/year" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mô tả"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtMoTa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập tại đây"
                android:inputType="text"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="10dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:text="Hình ảnh"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="27dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher_background" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu"
            android:textColor="@color/blueDark"
            android:text="Thêm" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blueDark"
            android:background="@drawable/menu"
            android:text="Clean" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/menu"
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blueDark"
            android:layout_weight="1"
            android:text="Sửa" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/menu"
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blueDark"
            android:text="Đi đến " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtTimKiem"
            android:layout_width="441dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Tìm kiếm tên sách"
            android:inputType="text" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/search" />
        <ImageView
            android:id="@+id/btncancle"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/remove" />
    </LinearLayout>

    <ListView
        android:id="@+id/listSach"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>